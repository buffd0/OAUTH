// prisma/schema.prisma

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  name     String?
  password String?

  // [추가] 이 사용자가 작성한 게시글들과의 관계 (역관계)
  posts Post[]
}

model Post {
  id       Int    @id @default(autoincrement())
  title    String
  content  String
  category String @default("자유게시판")
  views    Int    @default(0)

  // 회원 작성자 설정
  author   User? @relation(fields: [authorId], references: [id])
  authorId Int?

  // 비회원 작성자 정보
  guestName String?
  password  String?
  createdAt DateTime @default(now())
}
